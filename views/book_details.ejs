<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BookView - Uncover Literary Gems</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      rel="stylesheet"
      href="https://unicons.iconscout.com/release/v4.0.8/css/line.css"
    />
    
    <style>
      .login-btn {
        display: none;
      }
    </style>
  </head>
  <body>
    <!-- Header -->
    <header class="header">
      <nav class="nav">
        <a href="" class="nav_logo logo">BookView</a>
        <ul class="nav_items">
          <li class="nav_item nav-items">
            <a href="" class="nav_link">Home</a>
            <a href="" class="nav_link">About Us</a>
            <a href="" class="nav_link">Contact Us</a>
          </li>
        </ul>

        <button class="button login-btn" id="form-open">Login</button>
      </nav>
    </header>


    <!-- Book Details -->

    <div class="book_details">
        <div class="details_starts">
          <div class="container detail_block">
            <div class="row">
            <div class="col-md-4">
              <img src="<%= bookInfo.volumeInfo.imageLinks?.thumbnail %>" class="w-100" alt="Book Thumbnail" />
            </div>
            <div class="col-md-8">
              <h1><%= bookInfo.volumeInfo.title %></h1>
              <h6>Author: <%= bookInfo.volumeInfo.authors?.join(', ') %></h6>
              <p>Published Date: <%= bookInfo.volumeInfo.publishedDate %></p>
              <p>Page Count: <%= bookInfo.volumeInfo.pageCount %></p>
              <!-- Add more book details here -->
      
              <h2>Description:</h2>
              <p><%= (bookInfo.volumeInfo.description) %></p>
      
              <!-- Add more book details here -->
      
              <!-- Example: Display Google Reviews -->
              <% if (bookInfo.volumeInfo?.averageRating) { %>
                <h2>Google Reviews:</h2>
                <p>Average Rating: <%= bookInfo.volumeInfo.averageRating %></p>
                <p>Total Ratings: <%= bookInfo.volumeInfo.ratingsCount %></p>
              <% } else { %>
                <p>No Google Reviews available.</p>
              <% } %>
      
              <!-- Add more book details here -->

              <!-- Amazon Button -->

              <!-- Assuming you have bookInfo.industryIdentifiers containing the ISBN-13 -->
              <!-- <% const amazonUrl = `https://www.amazon.com/dp/${bookInfo.volumeInfo.industryIdentifiers.find(identifier => identifier.type === 'ISBN_13').identifier}` %> -->
              

              <% if (bookInfo.saleInfo.buyLink) { %>
                <a href="<%= bookInfo.saleInfo.buyLink %>" target="_blank">
                  <button class="button buy-btn">Buy eBook</button>
                </a>
              <% } %>
              
              
            </div>

            
        </div>
          </div>
          
    </div>